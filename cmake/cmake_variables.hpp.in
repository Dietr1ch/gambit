#ifndef __cmake_variables_hpp__
#define __cmake_variables_hpp__

/// Gambit source directory
#define GAMBIT_DIR "@PROJECT_SOURCE_DIR@"

/// Name of the gambit executable
#define GAMBIT_EXECUTABLE "@PROJECT_NAME@"

/// Found regex in STL
#cmakedefine HAVE_REGEX_H 1

/// Found link.h in system paths
#cmakedefine HAVE_LINK_H 1

/// Found Graphviz
#cmakedefine HAVE_GRAPHVIZ 1

/// Leave Delphes out of the compile
#cmakedefine EXCLUDE_DELPHES 1

/// Version info
/// @{
#cmakedefine GAMBIT_VERSION_MAJOR    @GAMBIT_VERSION_MAJOR
#cmakedefine GAMBIT_VERSION_MINOR    @GAMBIT_VERSION_MINOR
#cmakedefine GAMBIT_VERSION_REVISION @GAMBIT_VERSION_REVISION
#cmakedefine GAMBIT_VERSION_PATCH    "@GAMBIT_VERSION_PATCH"
/// @}

#endif //// #defined__cmake_variables_hpp__
